function gofast_audit_form_alter(&$form, &$form_state, $form_id)
{

  // Alter view page with system name "views-exposed-form-gofast-audit-page" to add a class
  if ($form['#id'] == "views-exposed-form-gofast-audit-page") {
    if (isset($form['filter-timestamp'])) {
      $form['filter-timestamp']['#attributes'] = array('class' => array('gofastDatepicker'));
    }
    if (isset($form['timestamp']['min'])) {
      $form['timestamp']['min']['#attributes'] = array('class' => array('gofastDatepicker'));
    }
    if (isset($form['timestamp']['max'])) {
      $form['timestamp']['max']['#attributes'] = array('class' => array('gofastDatepicker'));
    }
  }
}

