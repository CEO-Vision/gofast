  $nid = gofast_cmis_node_get_by_reference($reference);

  if(!empty($nid)){
      $node = node_load($nid);
      $is_confidential = isset($node->field_criticity['und'][0]['tid']) && taxonomy_term_load($node->field_criticity['und'][0]['tid'])->name == "Confidential Data";
  }
  print $is_confidential;
  exit;
}

