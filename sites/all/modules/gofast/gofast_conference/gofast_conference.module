function gofast_conference_build_documents_list($documents) {

    $documents_formated = [];

    foreach($documents as $document){

        $value = $document['value'];
        $valueSplit = explode('/', $value);
        $node = node_load($valueSplit[0]);
        $date = format_date($valueSplit[1], 'long', '', date_default_timezone_get());
        $node_icon = theme("gofast_node_icon_format", array("node" => $node));
        $document['title'] = $node->title;
        $document['href'] = '/node/' . $node->nid;
        $document['date'] = $date;
        $document['node_icon'] = $node_icon;

        unset($document['value']);
        unset($document['format']);
        unset($document['safe_value']);

        array_push($documents_formated, $document);

    }

    return $documents_formated;
}

function gofast_conference_build_folders_list($folders, $forMail = FALSE){
  $output = "<table class='table table-borderless' style='width:100%;'>";
  $rotate = 0;

  foreach($folders as $folder){
    if($rotate == 0){
      $output .= '<tr style="width:100%;">';
    }

    $path = $folder['value'];
    $title = end(explode('/', $path));

    $node_icon = '<span class="fa fa file-o fa-folder" style="margin-right: 10px;"></span>' . '<a href="/gofast/browser?path=' . rawurlencode($path) . '" title="' . $title . '" style="color: #337ab7; text-decoration: none;">' . $title . "</a>";
    if($forMail){
      global $base_url;
      $node_icon = "<img src='" . $base_url . "/sites/all/modules/gofast/gofast_mail_queue/icon/folder.png' />" . '<a href="' . $base_url . '/gofast/browser?path=' . rawurlencode($path) . '" title="' . $title . '">' . $title . "</a>";
    }
    $output .= '<td style="width:45%;display:inline-block;"><div style="font-family:Poppins;font-size:14px;font-weight:400;line-height:1;text-align:left;color:#000000;">'.$node_icon.'</div></td>';

    if(count($folders) > 1){
      if($rotate == 1){
        $rotate = 0;
        $output .= '</tr>';
      }else{
        $output .= '<td style="width:4%;display:inline-block;"></td>';
        $rotate++;
      }
    }else{
      $output .= '</tr>';
    }
  }

  $output .= "</table>";
  return $output;
}

