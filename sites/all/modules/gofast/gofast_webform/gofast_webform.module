function gofast_webform_delivery_form($form){
  //Get and format the forms in collapsable panels
  $content = "<div class='panel panel-default'>";
  $content .= "<div class='panel-heading' data-toggle='collapse' data-target='#gofast-webform-config' style='cursor: pointer;'>";
  $content .= "<a href='#' class='panel-title'>" . t("Form configuration", array(), array('context' => 'gofast:gofast_webform')) . "</a>";
  $content .= "</div><div id='gofast-webform-config' class='panel-body collapse'>";
  $content .= drupal_render($form[0]);
  $content .= "</div></div>";
  $content .= "<div class='panel panel-default'>";
  $content .= "<div class='panel-heading' data-toggle='collapse' data-target='#gofast-webform-edition' style='cursor: pointer;'>";
  $content .= "<a href='#' class='panel-title'>" .t("Form edition", array(), array('context' => 'gofast:gofast_webform')) . "</a>";
  $content .= "</div><div id='gofast-webform-edition' class='panel-body collapse in'>";
  $content .= drupal_render($form[1]);
  $content .= "</div></div>";
  $commands[] = ajax_command_html("#webform-edit-content", $content);
  
  
  //Add commands to add some JS files needed to generate the builder properly
  $path = drupal_get_path('module', 'webform');
  $commands[] = ajax_command_append("#webform-edit-content", "<script src='/".$path . "/js/webform.js?'></script>");
  $commands[] = ajax_command_append("#webform-edit-content", "<script src='/".$path . "/js/webform-admin.js?'></script>");
  $commands[] = ajax_command_append("#webform-edit-content", "<script src='/".$path . "/js/select-admin.js?'></script>");
  $path = drupal_get_path('module', 'form_builder');
  $commands[] = ajax_command_append("#webform-edit-content", "<script src='/".$path . "/form_builder.js?'></script>");
  
  //Add our JS to implement wanted behaviors to the builder
  $path = drupal_get_path('module', 'gofast_webform');
  $commands[] = ajax_command_append("#webform-edit-content", "<script src='/".$path . "/js/gofast_webform_builder.js?'></script>");
  
  //Retrieve and display Drupal messages in toasts
  $message_commands = gofast_messages_to_commands(TRUE);
  foreach($message_commands as $message_command){
    $commands[] = $message_command;
  }
  $output = json_decode(ajax_render($commands), TRUE);
  
  //Remove a command as it trigger a JS error
  foreach($output as $k => $command){
    if($command['selector'] == "head" && $command['command'] == 'insert'){
      unset($output[$k]);
    }
  }
  
  print json_encode($output);
  drupal_page_footer();
}

