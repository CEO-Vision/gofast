 */
function gofast_node_delete_modal_template($node = FALSE, $ajax = FALSE) {
  $items = [];
  if (!$node) {
    $paths = $_POST["items"];
    foreach ($paths as $path) {
      $path = gofast_xss_clean($path);
      $path = str_replace("/alfresco/webdav", "", $path);
      $items[] = gofast_cmis_item_get_by_path($path);
    }
  } elseif (isset($node->{GOFAST_CMIS_REFERENCE_FIELD}[LANGUAGE_NONE][0]["value"])) { // the item should exist in alfresco
    $ref = $node->{GOFAST_CMIS_REFERENCE_FIELD}[LANGUAGE_NONE][0]["value"];
    $items[] = gofast_cmis_item_get($ref);
  } else { // if we have a $node and no alfresco ref, then this means it's the Drupal node which was passed
    $items[] = $node;
  }
  $nodes_description = [];
  foreach ($items as $item) {
    $node_description = new stdClass();
    $node_description->children = [];
    // it's a folder so we also get its content
    if (!isset($item->properties["gofast:nid"])) {
      $children = gofast_cmis_webservice_item_get_descendants($item->id);
