/**
 * Submit handler for the archive form
 * @param $form
 * @param $form_state
 * @return void
 * @throws \Exception
 */
function gofast_modal_archive_form_submit($form, &$form_state): void {
	
	drupal_get_messages(); // Clear messages from the previous form
  $nodes = json_decode($form_state['values']['nodes'], true) ?? $form_state['build_info']['args']['nodes'];
	$is_bulk = FALSE;
  // Initialize an array to store AJAX commands for all nodes.
  $commands = [];
  $theme_data = "";
  if(count($nodes) > 1){
    $is_bulk = TRUE;
  }
  foreach ($nodes as $node) {
    $nid = is_object($node) ? $node->nid : $node['nid'];
    if (isset($nid)) {
      //Launch async archiving process (GOFAST-5256)
      $operation_state = [
        'space_node' => $node,
        'nid' => $nid,
        'step' => "1_1",
        'is_bulk' => $is_bulk,
        'is_last' => $node === end($nodes),
      ];
      variable_set("archiving_space_" . $nid, $operation_state);
      $theme_data .= theme("gofast_og_archiving_space", $operation_state);

    }
  }

  //Prepare the commands to send to the browser
  $commands[] = ctools_modal_command_display(t("Archiving your space(s)", [], ['context' => 'gofast:gofast_og']), $theme_data);
  // Print AJAX commands and finish the request after the loop.
  print ajax_render($commands);

  fastcgi_finish_request();

  // Process the operations for each node outside the loop.
  set_time_limit(0);
  foreach ($nodes as $node) {
    gofast_archive_space($node);
  }
}

