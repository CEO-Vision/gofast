/*
 * Form validate for og_add_members
 */
function gofast_modal_og_ui_add_users_userlist_validate($form, &$form_state){
  global $user;
  $validate_role = false;

  $json_user_userlist =   json_decode($form_state['input']['ac-list-tags-field-user-userlist']);

  if (empty($json_user_userlist)) {
      form_set_error('roles', t('Please select a user/userlist', array(), array('context' => 'gofast')));
      return;
  }

  foreach($form_state['values']['roles'] as $key=>$role){
    if(is_string($role)){
      $validate_role = true;
    }
  }

  if($validate_role == false){
    form_set_error('roles', t('Please select a role', array(), array('context' => 'gofast')));
  }else{
    $is_administrator = in_array('administrator member', gofast_og_get_user_final_roles_for_space('node', $form_state['values']["gid"], $user->uid), true);
    if (!$is_administrator) {
      form_set_error('name', t('You must be administrator of this space to add members to it', array(), array('context' => 'gofast')));
      return;
    }
    
    //check if we're adding an already existing member
    foreach ($json_user_userlist as $user_or_userlist) {
      if ($user_or_userlist->type != "user") {
        continue;
      }
      $account = user_load($user_or_userlist->value);
      $roles = og_get_user_roles("node", $form_state['values']["gid"], $account->uid);
      if(count($roles) > 0){
        $already_member = true;
        foreach($roles as $role){
          if($role == "non-member"){
            $already_member = false;
          }
        }
        if($already_member == true){
          $full_username = gofast_user_get_display_name_sql($account->uid);
          form_set_error('name', t('The user @username is already a member', array("@username" => $full_username), array('context' => 'gofast')));
          return;
        }
      }
    }
  }
  // this function is executed twice, prevent double audit insert line
  if (variable_get('add_member_is_audit',FALSE) == TRUE){
    //Insert into audit
      variable_set('add_member_is_audit',FALSE);
  }else{
      variable_set('add_member_is_audit',TRUE);
  }
}

