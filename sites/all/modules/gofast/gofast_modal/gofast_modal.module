  if ($form_state['values']['confirm']) {
    // Create room
    $room_id = gofast_riot_creatRoomRiot($node_id);

    if ($room_id) {

      $node = node_load($node_id);

      //Insert into audit
      $event = array('mod_author' => $user->uid, 'mod_timestamp' => time(), 'event' => 'create_room', "room_name" => $node->name);
