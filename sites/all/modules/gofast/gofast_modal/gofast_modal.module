  }
  if (!$form_state['executed'] || $form_state['rebuild']) {
  }
  else {
    // We'll just overwrite the form output if it was successful.
    $commands = array();
    if (isset($_GET['destination'])) {
      $commands[] = ctools_ajax_command_redirect($_GET['destination']);
    }
