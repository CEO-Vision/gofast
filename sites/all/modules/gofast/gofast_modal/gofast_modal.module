function gofast_modal_update_alfresco_file($js, $node) {
  $form_id = "gofast_cmis_alfresco_file_form";
  if (!$js) {
    return drupal_get_form($form_id, $node);
  }
  ctools_include('modal');
  ctools_include('ajax');

  $form_state = array(
    'build_info' => array(
      'args' => array(
        $node,
      ),
    ),
    // 'title' => t('Comment'),
    'ajax' => TRUE,
    're_render' => FALSE,
    'no_redirect' => TRUE,
  );

  $commands = ctools_modal_form_wrapper($form_id, $form_state);

  if (isset($form_state['is_different_extension']) && $form_state['is_different_extension'] === TRUE) {
    $commands[] = gofast_command_toast_message(t('You can\'t upload a new version of a file with a different format than original file', array(), array('context' => 'gofast')), 'error');
    $commands[] = ctools_modal_command_dismiss();
  } else {
    if (isset($form_state['is_different_name']) && $form_state['is_different_name'] === TRUE ) {
      $commands[] = gofast_command_toast_message(t('The new file name is different than the original file. Be sure your are uploading the right file', array(), array('context' => 'gofast')), 'warning');
      // When clicking on submit
    }
    if ($form_state['executed']) {
      $commands[] = ctools_modal_command_dismiss();
      if(!gofast_essential_is_essential()){
        $commands[] = ajax_command_html('#ctools-add-js', "<script type='text/javascript'>
            Gofast.processAjax(window.location.pathname);
          </script>"
        );
      }
      $commands[] = ajax_command_html('#ctools-add-js', "<script type='text/javascript'>
      Drupal.gofast_cmis.reloadPreview();
	  </script>");

      $commands = array_merge($commands, gofast_ajaxification_get_toast_messages());
    }

  }
  print ajax_render($commands);
}

