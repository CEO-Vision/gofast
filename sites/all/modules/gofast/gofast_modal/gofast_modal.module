function gofast_modal_manage_folder_locations_form($js){
  $folder_path = $_GET["path"];
  $args = [null, $folder_path];
  // we have multiple mirroring-related check to make before displaying the form
  $check_mirror_functions = ["gofast_contextual_menu_folder_nodes_are_not_multified", "gofast_contextual_menu_folder_folders_are_not_mirror"];
  foreach ($check_mirror_functions as $check_mirror_function) {
    $check_mirror = call_user_func_array($check_mirror_function, $args);
