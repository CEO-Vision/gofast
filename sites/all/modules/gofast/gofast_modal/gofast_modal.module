/**
 * Function call drupal_get_form api to create a modal with form content
 *
 * @param string $title
 * @param string $form_id
 * @param string $vars
 * @return array $result Contain The modal title and his content (html of form)
 */
function gofast_modal_create_form_modal_content($title, $form_id, $vars = NULL){
  if(isset($vars)){
    $form = drupal_get_form($form_id, $vars);
  }else{
    $form = drupal_get_form($form_id);
  }
  $content = drupal_render($form);

  $page = $content;

  $result = [
    'title' => $title,
    'page' => $page
  ];

  return $result;
}

