/**
 * Implements hook_form_BASE_FROM_ID_alter().
 */
function gofast_modal_form_comment_form_alter(&$form, &$form_state, $form_id) {
  $comment = $form_state['comment'];

  $is_private = FALSE;
  // if we're replying to an existing comment and the comment is private, we want the reply to be private too
  if (isset($form_state["build_info"]["args"][0]->pid)) {
    $comment_id = $form_state["build_info"]["args"][0]->pid;
    $query = db_select("field_data_field_comment_is_private", "fd");
    $query->fields('fd', array("field_comment_is_private_value"));
    $query->condition("entity_id", $comment_id);
    $is_private = $query->execute()->fetchCol()[0];
  }
  if($is_private) {
    $form['field_comment_is_private'][LANGUAGE_NONE]['#default_value'] = 1;
    $form['field_comment_is_private'][LANGUAGE_NONE]['#disabled'] = TRUE;
  }
  //translation
  $label = $form['comment_body'][LANGUAGE_NONE][0]['#title'];
  $form['comment_body'][LANGUAGE_NONE][0]['#title'] = t($label, array(), array('context' => 'gofast:gofast_modal'));
  // we use #after_build to unset ckeditor module pre_render callback because it has not been set yet at this time (because of ckeditor module weight)
  $form['comment_body'][LANGUAGE_NONE][0]['#after_build'] = ["gofast_cmis_remove_ckeditor"];
  // we'll handle ckeditor init ourselves, so we have to fill in the ckeditor profile we want to trigger
  $form['comment_body'][LANGUAGE_NONE][0]['#attributes']['data-ckeditor'] = "ckeditor-full";
  $form['comment_body'][LANGUAGE_NONE][0]["#resizable"] = FALSE;

  $label = $form['field_comment_is_private'][LANGUAGE_NONE]['#title'];

  $form['field_comment_is_private'][LANGUAGE_NONE]['#title'] = t($label);
  $label = $form['field_comment_is_private'][LANGUAGE_NONE]['#description'];
  $form['field_comment_is_private'][LANGUAGE_NONE]['#description'] = t($label);

  //hide author
  $form['author']['#type'] = 'hidden';

  // If not replying to a comment, use our dedicated page callback for new
  // comments on nodes.
  if (empty($comment->cid) && empty($comment->pid)) {
    // Change the action to call our function.
    $form['#action'] = url('gofast/nojs/comment/reply/' . $comment->nid);
  }else if(!empty($comment->pid)){

    //Prefill title if replying to another comment
    $parent_comment = comment_load($comment->pid);
    //GOFAST-7236 Keeping custom subject
    $form['subject']['#default_value'] = ($comment->subject == null) ? 'RE: '.$parent_comment->subject : $comment->subject;
  }

  gofast_user_alter_comments($form, $form_alter);
  
  //Add validation function
  $form['#validate'][] = 'gofast_modal_comment_form_validate';
}

function gofast_modal_comment_form_validate($form, &$form_state){
  //Get comment from form
  $comment = $form_state['values']['comment_body'][LANGUAGE_NONE][0]['value'];
  
  //Filter XSS
  $comment = gofast_xss_clean($comment);
  
  $form_state['values']['comment_body'][LANGUAGE_NONE][0]['value'] = $comment;
}

