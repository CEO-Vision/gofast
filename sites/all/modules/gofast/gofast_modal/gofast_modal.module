function gofast_modal_form_i18n_node_select_translation_alter(&$form, &$form_state, $node, $translations) {
  $node = $form_state['build_info']['args'][0];
  $translations = $form_state['build_info']['args'][1];
  $node_type = str_replace('_', '-', $node->type);
  $form["#theme"] = ["i18n_node_select_translation_form"];

  foreach (i18n_node_language_list($node) as $langcode => $language_name) {
    if ($langcode == $node->language || $langcode == LANGUAGE_NONE || $langcode == "gfen") {
      continue;
    }
    $attributes_name = [
      'class' => ['form-control-tags js-tagify'],
      //'data-enforce' => '', //  Comment : Do not allow putting data that dose not exist | Decomment : allow putting data that dose not exist
      //'data-user' => '', // show ac users
      'data-node' => '', // show ac node
      //'data-userlist' => '', // show ac userlist
      //'data-taxonomy_term' => '' // show ac taxonomy term
      'data-language' => $langcode
    ];

    // existing value input
    $json_exist_node = FALSE;
    if (isset($translations[$langcode])) {
      $json_exist_node = json_encode(gofast_modal_i18n_node_nid2autocomplete($translations[$langcode]->nid));
    }
    if($json_exist_node != FALSE && !empty($json_exist_node)){
      $form['actagify-' . 'ac-list-tags-field-translations-' . $langcode] = array(
        '#type' => 'textfield',
        '#name' => 'gofast_tagify_ac',
        '#default_value' => $json_exist_node,
        '#attributes' => array(
          'class' => array('gofast_display_none')
        )
      );
    }

    $form['translations']['node'][$langcode] = array(
      '#type' => 'textfield',
      '#attributes' => $attributes_name,
      '#name' => 'ac-list-tags-field-translations-'. $langcode,
      '#maxlength' => 255
    );
  }

  if (isset($form['translations']['language'])) {
    foreach ($form['translations']['language'] as $langkey => $language) {
     if($langkey == "gfen"){
        unset($form['translations']['language'][$langkey]);
        unset($form['translations']['nid']["gfen"]);
        continue;
      }
      //if (!isset($translations[$langkey])) {
      $lang_icon = gofast_get_flag_icon_by_langcode($langkey);
      $button_title = t('Add translation : ', array(), array('context' => 'gofast')) . t($language['#value']);
      $icon_add = '<i class="fa fa-plus" aria-hidden="true"></i>';
      $link_text = $icon_add . '&nbsp;&nbsp;' . $lang_icon;
      $link_href = '/node/add/' . $node_type . '?translation=' . $node->nid . '&target=' . $langkey;
      $form['translations']['action_add'][$langkey] = array(
        '#type' => 'container',
        '#attributes' => array('class' => array('translation-action-add')),
        '#states' => array(
          'visible' => array(
            ':input[id=edit-translations-node-' . $langkey . ']' => array('empty' => TRUE),
          )
        )
      );
      $form['translations']['action_add'][$langkey]['markup'] = array(
        '#markup' => '<a href="' . $link_href . '" class="btn btn-default no-footer" data-dismiss="modal" data-language="' . $language['#value'] . '" title="' . $button_title . '">' . $link_text . '</a>',
      );
      //}
    }
  }

   unset($form['actions']['update']['#markup']);
   $form['actions']['update']['#attributes'] = array('class' => array('btn-success'));
   $form['#validate'][] = "gofast_modal_form_i18n_node_select_translation_validate";
}

function gofast_modal_form_i18n_node_select_translation_validate($form, &$form_state) {
  foreach($form_state['input'] as $id_elem => $elem){
    $length = strlen('ac-list-tags-field-translations-');
    if(substr($id_elem, 0, $length) === 'ac-list-tags-field-translations-'){
      $translation_node = json_decode($elem)[0];
      $lang = explode('ac-list-tags-field-translations-', $id_elem)[1];
      if (!$translation_node->name) {
        $nid = 0;
      } else {
        $nid = i18n_node_autocomplete2nid($translation_node->name, "translations][node][$lang", array($form_state['values']['node']->type), array($lang));
      }
      $form_state['values']['translations']['nid'][$lang] = $nid;
    }
  }
}

