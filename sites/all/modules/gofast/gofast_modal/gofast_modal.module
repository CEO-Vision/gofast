/*
 * Callback to archive a space
 * This function first check the permission, then if the user is able to archive the space receive in param, archive each document,
 * then put the field field_archive to 1 on the node
 */
function gofast_modal_archive_group_modal($js,$node_ids){
	
  $is_single_node  = !str_contains($node_ids, "-");
	$spaces = [];
	
	$selection_checks = [
		'selection_has_unauthorized_spaces' => FALSE,
		'selection_has_already_archived_spaces' => FALSE,
		'selection_has_spaces_with_children' => FALSE,
	];

  $form_id = 'gofast_modal_archive_form';

  if($is_single_node) {
    $spaces_nids = [$node_ids];
  } else {
    $spaces_nids = gofast_og_get_bulk_nids_in_string($node_ids, "-");
  }

  foreach ($spaces_nids as $space) {
    $node = node_load($space);
  
    $access_checks = [
      og_user_access("node", $node->nid, 'archive space', NULL, FALSE, TRUE),
      node_access('delete', $node),
    ];

    if (in_array(FALSE, $access_checks)) {
      $selection_checks['selection_has_unauthorized_spaces'] = TRUE;
      drupal_set_message(t('You do not have the permission to archive this space @space.', ['@space' => $node->title], ['context' => 'gofast_og:space_archive']), 'warning');
    }
    else if(!empty(gofast_og_get_children($node->nid))){
      $selection_checks['selection_has_spaces_with_children'] = TRUE;
      drupal_set_message(t('The space @space cannot be archived because it contains sub-spaces.', ['@space' => $node->title], ['context' => 'gofast_og:space_archive']), 'warning');
    }
    else if($node->field_archive[LANGUAGE_NONE][0]['value'] == 1){
      $selection_checks['selection_has_already_archived_spaces'] = TRUE;
      drupal_set_message(t('@space is already archived', ['@space' => $node->title],['context' => 'gofast_og:space_archive']), 'warning');
    }
    else{
      $spaces[] = $node;
    }
  }

	if(!$js) {
		return drupal_get_form($form_id, $spaces);
	}
	
	ctools_include('modal');
  ctools_include('ajax');

  $form_state = [
    'ajax' => TRUE,
    'build_info' => [
      'args' => ['nodes' => $spaces,]
    ],
    'title' => t('Archive the space(s)', [], ['context' => 'gofast_og:space_archive'])
  ];

  $commands = ctools_modal_form_wrapper($form_id, $form_state);
  $commands[] = gofast_modal_get_archive_validation_commands(spaces: $spaces, commands: $commands, selection_checks: $selection_checks);

  if ($form_state['executed']) {
    //If the form is validated, the real commands are sent from the form submit
    $commands[] = ctools_modal_command_dismiss();
  }

  print ajax_render($commands);
}

/**
 * Returns the commands to display a toast message if the user has not the permission
 * to archive the space(s) or if the space(s) is/are already archived
 *
 * @param array $spaces
 * @param $commands
 * @param array $selection_checks
 *
 * @return array
 */
function gofast_modal_get_archive_validation_commands(array $spaces, &$commands, array $selection_checks ): array {

	extract($selection_checks);

	if (!empty($spaces) && $selection_has_unauthorized_spaces && $selection_has_already_archived_spaces && $selection_has_spaces_with_children) {
		$commands[] = gofast_command_toast_message(t('You do not have the permission to archive some of the spaces you have selected, some are already archived and some have subspaces. These spaces will not be archived.',
			[], ['context' => 'gofast_og:space_archive']), 'warning');
		return $commands;
	}
	
	if (empty($spaces)) {
		if ($selection_has_unauthorized_spaces && $selection_has_already_archived_spaces && $selection_has_spaces_with_children) {
			$commands[] = ctools_modal_command_dismiss();
			$commands[] = gofast_command_toast_message(t('The selected spaces could not be archived because you 
			either do not have the permissions to archive some spaces, some are already archived or have subspaces',
				[], ['context' => 'gofast_og:space_archive']), 'warning');
			return $commands;
		}

		if ($selection_has_already_archived_spaces && !$selection_has_unauthorized_spaces) {
			$commands[] = ctools_modal_command_dismiss();
			$commands[] = gofast_command_toast_message(t('All the spaces you have selected are already archived.',
				[], ['context' => 'gofast_og:space_archive']), 'warning');
		}
		else if($selection_has_unauthorized_spaces && !$selection_has_already_archived_spaces){
			$commands[] = ctools_modal_command_dismiss();
			$commands[] = gofast_command_toast_message(t('You do not have the permission to archive the space(s) you selected.',
				[], ['context' => 'gofast_og:space_archive']), 'warning');
		}
		else if($selection_has_spaces_with_children){
			$commands[] = ctools_modal_command_dismiss();
			$commands[] = gofast_command_toast_message(t('Some spaces you have selected have children. These spaces will not be archived.',
				[], ['context' => 'gofast_og:space_archive']), 'warning');
		}
		else{
			$commands[] = ctools_modal_command_dismiss();
			$commands[] = gofast_command_toast_message(t('This space cannot be archived.',
				[], ['context' => 'gofast_og:space_archive']), 'warning');
		}
		return $commands;
	}
	
	if ($selection_has_already_archived_spaces) {
		$commands[] = gofast_command_toast_message(t('Some spaces you have selected are already archived and will not be re-archived.',
			[], ['context' => 'gofast_og:space_archive']), 'warning');
		return $commands;
	}

	if ($selection_has_unauthorized_spaces) {
		$commands[] = gofast_command_toast_message(t('You do not have the permission to archive some spaces. These spaces will not be archived.',
			[], ['context' => 'gofast_og:space_archive']), 'warning');
		return $commands;
	}

	return $commands;
}

