 *
 * @param mixed $form
 * @param mixed $form_state
 *
 * @return array
 */
function gofast_userlist_preadd_users_form(mixed $form, mixed &$form_state): array {

  $form['user_userlist_member']['#title'] = $form_state['label'] ??
    t('Pre Add a member to this userlist',  array(), 
      array('context' => 'gofast:gofast_userlist:preadd:modal:title'));

  $form['user_userlist_member']['member_entity_type'] = array(
    '#type' => 'hidden'
  );

  $attributes_name = [
    'class' => [' form-control-tags js-tagify'],
    //'data-enforce' => '', //  Comment : Do not allow putting data that dose not exist | Decomment : allow putting data that dose not exist
    'data-user' => '', // show ac users
  ];

  $form['user_userlist_member']['name']=[
    '#title' => t('User ', array(), array('context' => 'gofast_og_userlist')),
    '#type' => 'textfield',
    '#attributes' => $attributes_name,
    '#name' => 'ac-list-tags-field-user-userlist'
  ];

  $form['message'] = array(
    '#title' => t('Message for space administrators', array(), array('context' => 'gofast:gofast_userlist:preadd:modal:field')),
    '#type' => 'textarea',
    '#size' => 62,
  );

  $form['submit'] = array(
    '#type' => 'submit',
    '#value' => t('Pre-add new member(s)', array(), array('context' => 'gofast:gofast_userlist:preadd:modal:submit_button')),
    '#validate' => array('gofast_preadd_users_form_validate'),
    '#attributes' => array('class' => array('btn', 'btn-success', 'btn-sm')),
  );

  return $form;
}

/**
