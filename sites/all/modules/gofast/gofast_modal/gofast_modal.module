function gofast_modal_new_document() {
  $form_id = 'alfresco_item_node_form';
  if(isset($_GET["path"])){
    $path = gofast_xss_clean($_GET["path"]);
    $nid = gofast_cmis_get_spaceid_by_webdav_folder($path, null);
    if (og_user_access('node', $nid, 'create alfresco_item content') == 1){
      //Check if the group is not archived
      if (!gofast_group_is_archive(node_load($nid))){
        }else{
          $commands[] = gofast_command_toast_message(t('You can\'t write to this group because it is archived'), "warning");
        }
      }else{
        $commands[] = gofast_command_toast_message(t('You don\'t have write permission in this group'), "warning");
    }
    if(isset($commands)){
      print ajax_render($commands);
      exit;
    }
  }
  ctools_include('modal');
  ctools_include('ajax');
  $form_state = array(
    'reset_html_ids' => TRUE,
    'title' => t('Add new document', array(), array('context' => 'gofast:gofast_ajax_file_browser')),
  );
  $form_state += array(
    're_render' => FALSE,
    'no_redirect' => FALSE,
  );
  if(isset($_GET["path"])){
    $form_state['values'][GOFAST_CMIS_MAIN_LOCATION_FIELD][LANGUAGE_NONE][0]['value'] = gofast_xss_clean($_GET["path"]);
  }

  unset($_POST['ajax_html_ids']);
  $node = new stdClass();
  $node->type = "alfresco_item";
  
  $_POST['from_modal'] = TRUE;
  $output = drupal_get_form($form_id, $node);
  $commands = ctools_modal_form_render($form_state, $output);
  print ajax_render($commands);
}

