function gofast_metadata_get_node_external_links_data($node){
  $external_page_urls = $node->field_external_page_url[LANGUAGE_NONE];
  //Get variable to know if we want to accept http:// link in external link
  $use_http_link = variable_get("use_http_link", false);

  $links = [];
  foreach ($external_page_urls as $external_link) {
    $external_link = $external_link["value"];
    if (preg_match('/^https?:\/\//', $external_link)) {
      if($use_http_link) {
        $external_link_url = $external_link;
      } else {
        $external_link_url = preg_replace('/^https?:\/\//', "https://", $external_link );
      }
    } else {
      $external_link_url = "https://" . $external_link;
    }
    $external_link_icon = '<i class="fas fa-external-link-square-alt"></i>';
    $urls = json_decode($node->field_external_link_custom_data[LANGUAGE_NONE][0]["value"], true);
    if($urls[$external_link_url]["icon"] != null){
      $external_link_icon = '<img src="'.$urls[$external_link_url]["icon"].'" onerror="Gofast.metadata.handleExternalLinkIconError(event)" class="external-url-icon">';
    }
    $external_link_title = empty($urls[$external_link_url]["title"]) ? $external_link_url : $urls[$external_link_url]["title"];
    $links[] = array('title' => $external_link_title, 'icon' => $external_link_icon, 'url' => $external_link_url);
  }
  return $links;
}