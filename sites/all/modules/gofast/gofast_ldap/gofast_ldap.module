          . '-' . t('At least 1 special character.', array(), array('context' => 'gofast:gofast_ldap')) . '</br>'
      );
  }
      
  foreach ($values['roles'] as $key => $value) {
    if ($value === 0 || $value === FALSE) {
      unset($values['roles'][$key]);
    } else if (is_numeric($value) && $value !== 0) {
