function gofast_render_allCommentsByNode_async($node, $async=false){
  global $base_url;

  $build = gofast_api_get_render_all_comments($node);
  $arrayDataComments = $build['comments']['comments'];
  $comments=[];
  foreach($arrayDataComments as $dataComment){
    $comment = $dataComment['comment_body']['#object'];
    if ($comment->cid) {
        $commentPrincipalArray[] = ['id'=>$comment->cid ,'pid'=>$comment->pid];
    }
  }

  foreach($arrayDataComments as $dataComment){
    $comment = $dataComment['comment_body']['#object'];
    $nid = $comment->nid;
    $cid = $comment->cid;
    if($cid){
      $user = user_load($comment->uid);
      $node = node_load($nid);

      // essentiel data
      $dataReturn['comment_id'] = $cid;
      $dataReturn['comment_pid'] = $comment->pid;
      $dataReturn['comment_nid'] = $nid;
      $dataReturn['creator_id'] = $comment->uid;
      $dataReturn['creator_name'] = gofast_user_display_name($user);
      $dataReturn['creator_picture'] = $user->picture->uri == null ? $base_url . '/sites/all/themes/bootstrap-keen/keenv2/assets/media/users/blank.png' : file_create_url($user->picture->uri);;
      $dataReturn['creator_link'] = '/user/' .  $comment->uid;
      $dataReturn['title'] = $comment->subject;
      $dataReturn['creation_date'] = format_date($comment->created, 'custom', 'Y-m-d H:i:s');
      $dataReturn['edited_date'] = format_date($comment->changed, 'custom', 'Y-m-d H:i:s');
      $dataReturn['is_private'] = $comment->field_comment_is_private[LANGUAGE_NONE][0]['value'];
      $dataReturn['text'] =  $dataComment['comment_body']['#items'][0]['value'];
      $dataReturn['links'] = $dataComment['links'];

      $editorId = isset($comment->field_edited_by[LANGUAGE_NONE][0]['value']) ? $comment->field_edited_by[LANGUAGE_NONE][0]['value'] : false;
      if ($editorId != false && $editorId > 0) {
          $edit_user = user_load($editorId);
          $dataReturn['edit_user']["uid"] = $edit_user->uid;
          $dataReturn['edit_user']["name"] = gofast_user_display_name($edit_user);
          $dataReturn['edit_user']["picture"] = $edit_user->picture->uri == null ? $base_url . '/sites/all/themes/bootstrap-keen/keenv2/assets/media/users/blank.png' : file_create_url($edit_user->picture->uri);
          $dataReturn['edit_user']["link"] = '/user/' .  $edit_user->uid;
        }

      $can_edit = user_access('use vote up/down on comments');
      if ($can_edit || user_access('view vote up/down count on comments')) {
        $tag = variable_get('vud_tag', 'vote');
        $widget_theme = variable_get('vud_comment_widget', 'plain');

        $variables = array(
          'entity_id' => $comment->cid,
          'type' => 'comment',
          'tag' => $tag,
          'widget_theme' => $widget_theme,
          'readonly' => !$can_edit,
        );
        $dataReturn['vud_comment_widget'] = theme('vud_widget', $variables);
      }



      if (empty($comment->in_preview)) {
        $prefix = '';
        $is_threaded = isset($comment->divs) && variable_get('comment_default_mode_' . $node->type, COMMENT_MODE_THREADED) == COMMENT_MODE_THREADED;

        // Add 'new' anchor if needed.
        if (!empty($comment->first_new)) {
          $prefix .= "<a id=\"new\"></a>\n";
        }

        // Add indentation div or close open divs as needed.
        if ($is_threaded) {
          $prefix .= $comment->divs <= 0 ? str_repeat('</div>', abs($comment->divs)) : "\n" . '<div class="timeline-item pl-10">';
        }

        // Add anchor for each comment.
        $prefix .= "<a id=\"comment-$comment->cid\"></a>\n";
        $dataReturn['prefix'] = $prefix;

        // Close all open divs.
        if ($is_threaded && !empty($comment->divs_final)) {
          $dataReturn['prefix'] = str_repeat('</div>', $comment->divs_final);
        }
      }
      $comments[] =$dataReturn;
    }
  }

  foreach ($comments as $comment) {
    if($comment['comment_pid'] == 0) {
        $newC[] = getChildrens($comment, $comments);
      }
  }


  $container = theme('gofast_comment_container', ['comments' => $newC, 'nid' => $node->nid]);
  if($async){
    return  $container;
  }else{
    print $container;
  }
}


