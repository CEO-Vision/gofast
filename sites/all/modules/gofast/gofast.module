function gofast_get_properties_user_by_uid_or_u_name($uid = NULL, $u_name = NULL, $properties_u) {

    if (empty($properties_u) || $uid == NULL && $u_name == NULL) return false;

    $properties_u_join = ['fullname', 'firstname', 'lastname', 'entity', 'points', 'is_extranet', 'telephonenumber', 'left'];

    $query = db_select('users', 'u');

	foreach($properties_u_join as $property) {
	    $offset = array_search($property, $properties_u);
	    if($offset !== false) {
	        switch ($property) { // use leftJoin if the information is not systematic for all users
                    case 'fullname':
                        $query->join('field_data_ldap_user_displayname', 'fun', 'fun.entity_id = u.uid'); // fullname
                        $query->addField('fun', 'ldap_user_displayname_value', 'fullname');
                        break;
                    case 'firstname':
                        $query->join('field_data_ldap_user_givenname', 'fin', 'fin.entity_id = u.uid'); // firstname
                        $query->addField('fin', 'ldap_user_givenname_value', 'firstname');
                        break;
                    case 'lastname':
                        $query->join('field_data_ldap_user_sn', 'ln', 'ln.entity_id = u.uid'); // lastname
                        $query->addField('ln', 'ldap_user_sn_value', 'lastname');
                        break;
                    case 'entity':
                        $query->leftJoin('field_data_ldap_user_o', 'o', 'o.entity_id = u.uid'); // entity
                        $query->addField('o', 'ldap_user_o_value', 'entity');
                        break;
                    case 'points':
                        $query->leftJoin('userpoints', 'up', 'up.uid = u.uid'); // points
                        $query->fields('up', ['points']);
                        break;
                    case 'is_extranet':
                        $query->leftJoin('field_data_is_extranet', 'ex', 'ex.entity_id = u.uid'); // extranet
                        $query->addField('ex', 'is_extranet_value', 'is_extranet');
                        break;
                    case 'telephonenumber':
                        $query->leftJoin('field_data_ldap_user_telephonenumber', 't', 't.entity_id = u.uid'); // telephonenumber
                        $query->addField('t', 'ldap_user_telephonenumber_value', 'telephonenumber');
                        break;
                     case 'left':
                        $query->leftJoin('field_data_field_left', 'l', 'l.entity_id = u.uid'); // left
                        $query->addField('l', 'field_left_value', 'left');
                        break;
                    default:
                        return 'error';
	        }

	        array_splice($properties_u, $offset, 1);
	    }
	}

    if (empty($properties_u)) return false;

    $query->fields('u', $properties_u);
    if($u_name) {
        $query->condition('u.name', $u_name, '=');
    } else {
        $query->condition('u.uid', $uid, '=');
    }
    $result = $query->execute();

    return $result->fetchAll()[0];
}

