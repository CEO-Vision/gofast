function gofast_preprocess_item_list(&$vars)
{
  // make sure we're dealing with a pager item list
  if (isset($vars['attributes']['class']) && (in_array('pagination', $vars['attributes']['class']) || in_array('pager', $vars['attributes']['class']))){
    $vars['attributes']['class'] = 'd-flex flex-wrap py-2 mr-3';
    $vars['attributes']['style']='list-style: none;';
    // loop the items
    foreach ($vars['items'] as $index => $item) {
      if ((in_array('active', $item['class']))) { // active
        $vars['items'][$index]['class'][] = 'btn btn-icon btn-sm border-0 btn-hover-primary active mr-2 my-1';
      }else if ((in_array('pager-ellipsis', $item['class']))) { // pager-ellipsis
        $vars['items'][$index]['class'][] = 'btn btn-icon btn-sm border-0 btn-light btn-hover-primary mr-2 my-1';
      }
    }
  }
}


function gofast_custom_pager_link(&$variables)
{
  $text = $variables['text'];
  $page_new = $variables['page_new'];
  $element = $variables['element'];
  $parameters = $variables['parameters'];
  $attributes = $variables['attributes'];

  $page = isset($_GET['page']) ? $_GET['page'] : '';
  if ($new_page = implode(',', pager_load_array($page_new[$element], $element, explode(',', $page)))) {
    $parameters['page'] = $new_page;
  }

  $query = array();
  if (count($parameters)) {
    $query = drupal_get_query_parameters($parameters, array());
  }
  if ($query_pager = pager_get_query_parameters()) {
    $query = array_merge($query, $query_pager);
  }

  // Set each pager link title
  if (!isset($attributes['title'])) {
    static $counter = NULL;
    static $titles = NULL;
    static $arrow = NULL;
    if (!isset($titles)) {
       $counter = array(
        t('« first') => 1,
        t('‹ previous') => 2,
        t('next ›') => 3,
        t('last »') => 4,
        // so we have the right icons even with the multiple t('next') and t('last') out there
        t('first') => 1,
        t('previous') => 2,
        t('next') => 3,
        t('last') => 4,
      );
      $titles = array(
        1 => t('Go to first page'),
        2 => t('Go to previous page'),
        3 => t('Go to next page'),
        4 => t('Go to last page'),
      );
      $arrow = array(
        1 => '<i class="fas fa-angle-double-left"></i>',
        2 => '<i class="fas fa-angle-left"></i>',
        3 => '<i class="fas fa-angle-right"></i>',
        4 => '<i class="fas fa-angle-double-right"></i>',
      );
    }
    if (isset($counter[$text])) {
      $i = $counter[$text];
      $attributes['title'] = $titles[$i];
      $arrow_div = $arrow[$i];
    } elseif (is_numeric($text)) {
      $attributes['title'] = t('Go to page @number', array('@number' => $text));
    }
  }

  // @todo l() cannot be used here, since it adds an 'active' class based on the
  //   path only (which is always the current path for pager links). Apparently,
  //   none of the pager links is active at any time - but it should still be
  //   possible to use l() here.
  // @see http://drupal.org/node/1410574
  $attributes['href'] = url($_GET['q'], array('query' => $query));

  if (isset($arrow_div)) {
      $attributes['class'] = 'btn btn-icon btn-sm btn-light-primary mr-2 my-1';
    return '<a' . drupal_attributes($attributes) . '>' . $arrow_div . '</a>';
  } else {
      $attributes['class'] = 'btn btn-icon btn-sm border-0 btn-light btn-hover-primary mr-2 my-1';
    return '<a' . drupal_attributes($attributes) . '>' . check_plain($text) . '</a>';
  }
}

