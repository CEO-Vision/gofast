  $actions = theme('contextual_links', ['buttons' => $metatags_contextual_actions]);
  return $actions;
}

function gofast_tags_merge_form($form, &$form_state, $terms) {
  $form['#id'] = 'gofast_tags_merge_form';
  $form['#submit'] = ['gofast_tags_merge_form_submit'];

  $form['terms'] = [
    '#type' => 'hidden',
    '#value' => $terms,
  ];

  $form['ac-list-tags-list-tags'] = [
    '#type' => 'textfield',
    '#id' => 'edit-field-tags',
    '#maxlength' => 512,
    '#attributes' => [
      'class' => [' form-control-tags js-tagify'],
      'data-taxonomy_term' => '',
      'data-vid' => GOFAST_VID_TAGS,
    ],
  ];
  $count = count($terms);
  $confirm_form = confirm_form($form, t('Merge @count selected tag(s) into?', ['@count' => $count]), 'admin/manage/metadata');
  unset($confirm_form['actions']['cancel']);

  return $confirm_form;
}

function gofast_tags_merge_form_submit($form, &$form_state) {
  $terms = $form_state['values']['terms'];
  $merge_into = json_decode($form_state['values']['ac-list-tags-list-tags']);
  $name = $merge_into[0]->name;
  $term_id = $merge_into[0]->value;
  $nodes = gofast_get_nodes_with_tags($terms);

  if (!empty($nodes)) {
    foreach ($nodes as $node) {
      $node_load = node_load($node);
      $wrapper = entity_metadata_wrapper('node', $node_load);
      $tags = $wrapper->field_tags->value();
      foreach ($tags as $tag) {
        $tids[] = $tag->tid;
      }
      $tids[] = $term_id;
      $tids = array_unique($tids);
      $new_tids = [];

      foreach ($tids as $tid) {
        if (in_array($tid, $terms)) {
          continue;
        }
        $new_tids[] = $tid;
      }
      $wrapper->field_tags->set($new_tids);
      $wrapper->save();
    }
  }

  $form_state['redirect'] = 'admin/manage/metadata';
  drupal_set_message(t('You are success merged terms into <b>%term</b>', ['%term' => $name]));
  return;
}

function gofast_get_nodes_with_tags($terms = []) {
  if (!empty($terms) && is_array($terms)) {
    $query = db_select('field_data_field_tags', 'tags');
    $query->addfield('tags', 'entity_id');
    $query->condition('field_tags_tid', $terms, "IN");
    return $query->execute()->fetchCol();
  }
  return [];
}

function gofast_metatags_multiple_confirm_delete($form, &$form_state, $terms) {
  $form['terms'] = [
    '#type' => 'hidden',
    '#value' => $terms,
  ];

  $value = t('List of choose terms');
  $value .= '<ul>';
  foreach ($terms as $term) {
    $term_load = taxonomy_term_load($term);
    $name = $term_load->name;
    $value .= '<li>' . $name . '</li>';
  }
  $value .= '</ul>';
  $form['terms_names'] = [
      '#type' => 'markup',
      '#markup' => $value,
  ];

  $confirm_form = confirm_form($form, t('Are you sure you want to delete the term(s)?'), 'admin/manage/metadata');
  unset($confirm_form['actions']['cancel']);
  return $confirm_form;
}

function gofast_metatags_multiple_confirm_delete_submit($form, &$form_state) {
  $terms = $form_state['values']['terms'];
  $names = [];
  foreach ($terms as $term) {
    $load_term = taxonomy_term_load($term);
    $names[] = $load_term->name;
    taxonomy_term_delete($term);
  }

  // Clean values in nodes
  $nodes = gofast_get_nodes_with_tags($terms);
  if (!empty($nodes)) {
    foreach ($nodes as $node) {
      $node_load = node_load($node);
      $wrapper = entity_metadata_wrapper('node', $node_load);
      $tags = $wrapper->field_tags->value();
      foreach ($tags as $tag) {
        $tids[] = $tag->tid;
      }
      $tids = array_unique($tids);
      $new_tids = [];
      foreach ($tids as $tid) {
        if (in_array($tid, $terms)) {
          continue;
        }
        $new_tids[] = $tid;
      }
      $wrapper->field_tags->set($new_tids);
      $wrapper->save();
    }
  }
  drupal_set_message(t('Deleted terms %name.', ['%name' => implode(', ', $names)]));
  watchdog('metatag_manage', t('Deleted terms %name.', ['%name' => implode(', ', $names)]), WATCHDOG_NOTICE);
  $form_state['redirect'] = 'admin/manage/metadata';
  cache_clear_all();
  return;
}
